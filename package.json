{
  "name": "attach-source-map",
  "version": "1.0.0",
  "description": "Attaches an inline source map to a script.",
  "author": "Ferdinand Prantl <prantlf@gmail.com>",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/attach-source-map/blob/master/LICENSE"
    }
  ],
  "homepage": "https://github.com/prantlf/attach-source-map#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/attach-source-map.git"
  },
  "bugs": {
    "url": "https://github.com/prantlf/attach-source-map/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "bin": {
    "attach-source-map": "bin/attach-source-map.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "biome lint *.js bin lib test",
    "check": "teru-esm test/*.js",
    "cover": "c8 teru-esm test/*.js && c8 report -r text -r lcov",
    "test": "biome lint *.js lib test && c8 teru-esm test/*.js && c8 report -r text -r lcov",
    "start": "python3 -m http.server"
  },
  "c8": {
    "reporter": []
  },
  "dependencies": {
    "rollup": "^4.53.5",
    "terser": "^5.44.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "c8": "^10.1.3",
    "tehanu": "^1.0.1",
    "tehanu-repo-coco": "^1.0.1",
    "tehanu-teru": "^1.0.1"
  },
  "keywords": [
    "source-map",
    "eval",
    "script",
    "html"
  ]
}
